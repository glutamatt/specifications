<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <title><%= title %></title>
  <%= stylesheet_link_tag 'http://twitter.github.com/bootstrap/1.3.0/bootstrap.min.css'%>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
  <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>
<body>
		<%= render 'layouts/topbar' %>
		<div class="container">
			<div class="content">
			<% if signed_in? %>
			<%= render 'layouts/header'%>
			  <div class="row">
			    <section class="section span12">
			    <% flash.each do |name, msg| %>
				    <%= content_tag(:div, (link_to("×", "#", :class => "close")) + (content_tag(:p, raw(msg))), :class => "alert-message #{name} fade in", :data_alert => "alert") %>
			    <% end %>
			    <%= yield %>
			    </section>
			    <%= render 'layouts/sidebar', :sidebar => sidebar %>
			  </div>
			  <% else %>
			    <% flash.each do |name, msg| %>
				    <%= content_tag(:div, (link_to("×", "#", :class => "close")) + (content_tag(:p, raw(msg))), :class => "alert-message #{name} fade in", :data_alert => "alert") %>
			    <% end %>
			    <%= yield %>
			  <% end %>
			</div>
		</div>
</body>
</html>
