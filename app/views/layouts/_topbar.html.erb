<div class="topbar">
	<div class="topbar-inner">
		<div class="container">
			<%= link_to "Specifications!", root_path, :class => "brand" %>
			<ul class="nav">
				<% if signed_in? %>
					<li><%= link_to "People", users_path %></li>
					<% if current_user.admin? %>
						<li class=""><%= link_to "Pending invitations", invitations_path %></li>
					<% end %>
				<li class="menu">
					<%= link_to("#{gravatar_for(current_user, {:size => 20})}#{current_user.name}".html_safe, "#", :class => "menu dropdown-toggle") %>
					<ul class="dropdown-menu">
						<li class=""><%= link_to "<i class='icon-user icon-white'></i>&nbsp;&nbsp;Profile".html_safe, current_user %></li>
						<li class="divider"></li>
						<li><%= link_to "<i class='icon-off icon-white'></i>&nbsp;&nbsp;Log out".html_safe, logout_path %></li>
					</ul>
				
				</li>
				<% else %>
				<li><%= link_to "Sign in", login_path %></li>
				<% end %>
			</ul>
		</div>
	</div>
</div>