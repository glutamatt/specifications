<div class="well new_userstory">
    <a href="#" class="show_form_new_userstory" >Add a user story</a>
    <%= form_for @userstory, :url => project_feature_userstories_path(feature.project,feature), :html => { :'data-type' => 'html', :id => "userstory-form-#{feature.id}" }, :remote => true do |f| %>
    	<fieldset>
    		<div class="clearfix<%= " error" if @userstory.errors[:content].any? %>">
    	    <div>
    				<%= f.text_area :content, :class => "xxlarge submit_on_return", :id => "user_story_content_#{feature.id}", :rows => "3" %>
					<span class="help-block">Give one sentence that captures what the user wants to achieve.</span>
    	    </div>
    		</div>
      </fieldset>

    		<%= f.submit "Add this userstory", :class =>  "btn primary" %>
    		or <a href="#" class="hide_form_new_userstory">I'm done with user stories</a>
    <% end %>
</div>