<h1>Log in</h1>
<%= form_for(:session, :url => sessions_path) do |f| %>
  <fieldset>
	<div class="clearfix">
    	<%= f.label :email %>
        <div class="input">
			<%= f.text_field :email, :class => "xlarge" %>
        </div>
	</div>
	<div class="clearfix">
    	<%= f.label :password %>
        <div class="input">
			<%= f.password_field :password, :class => "xlarge" %>
        </div>
	</div>
  </fieldset>
  <div class="actions">
 	<%= f.submit "Sign in", :class =>  "btn primary" %> or <%= link_to "Get invited!", new_invitation_path %>
  </div>
<% end %>
