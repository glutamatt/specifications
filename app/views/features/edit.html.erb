<h1 class="title">Edit <%= @feature.name %></h1>

<%= form_for ([@project,@feature]) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<fieldset>
		<div class="clearfix<%= " error" if @feature.errors[:name].any? %>">
	    	<%= f.label :name %>
	        <div class="input">
				<%= f.text_field :name, :class => "xlarge", :autocomplete => "off" %>
	        </div>
		</div>
		<div class="clearfix<%= " error" if @feature.errors[:description].any? %>">
	    	<%= f.label :description %>
	        <div class="input">
				<%= f.text_area :description, :class => "xxlarge", :rows => "3" %>
				<span class="help-block">
					Add a description to the feature.
				</span>
		</div>
  </fieldset>
	<div class="actions">
		<%= f.submit "Save change", :class =>  "btn primary" %>
		<%= link_to "Cancel", project_feature_path(@project), :class => "btn" %>
	</div>
<% end %>