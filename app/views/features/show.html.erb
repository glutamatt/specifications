<% content_for :title_header do %>
  <%= @feature.name.force_encoding(Encoding::UTF_8) %> 
  <small><%= link_to "edit", edit_project_path %></small>
  <small class='danger'><%= link_to "Delete this feature", project_feature_path(@feature.project, @feature), :method => :delete, :confirm => "Are you sure?", :title => "Delete #{@feature.name.force_encoding(Encoding::UTF_8)}" %></small>
<% end %>


<article id="project" class="features" data-project-id="<%= @project.id %>">
	<p class="description"><%= @feature.description.force_encoding(Encoding::UTF_8) %></p>
	<ul class="userstories" id="feature_<%= @feature.id %>">
		<%= render @userstories %>
	</ul>
	<%= render 'userstories/new', :feature => @feature, :userstory => @userstory %>
</article>